# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/event-management

# JWT Configuration
JWT_SECRET=secure_test
JWT_EXPIRE=7d

# Email Configuration
# For development, set ENABLE_REAL_EMAILS=true to send real emails
# Leave it undefined or false to use email simulation
ENABLE_REAL_EMAILS=false

# Email Service Settings (Required only if ENABLE_REAL_EMAILS=true)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Email Display Settings
FROM_NAME=Event Management System
FROM_EMAIL=noreply@eventmanagement.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
